<!DOCTYPE html>
<html lang="en">
  <%- include('head') %>
  <body>
    <%- include('navbar') %>

    <div class="container my-3 shadow">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">No.</th>
            <th scope="col">Name</th>
            <th scope="col">Username</th>
            <th scope="col">Birthday</th>
            <th scope="col">Role</th>
          </tr>
        </thead>
        <tbody>
          <% userList.forEach((user,index) => { %>

          <tr>
            <th scope="row"><%= index + 1 %></th>
            <td><%= user.name %></td>
            <td><%= user.username %></td>
            <td>
              <%= new Date( user.dob).getFullYear() + '-' + ('0' + ( new Date(
              user.dob).getMonth() + 1)).slice(-2) + '-' + ('0' + new Date(
              user.dob).getDate()).slice(-2) %>
            </td>
            <td>
              <% if (user.isAdmin) { %>
              <span
                class=""
                style="
                  width: 20px;
                  height: 20px;
                  padding: 5px;
                  border-radius: 22px;
                  background-color: #ffeeba;
                "
                >Admin</span
              >
              <% }else{%>
              <span
                class=""
                style="
                  width: 20px;
                  height: 20px;
                  padding: 5px;
                  border-radius: 22px;
                  background-color: #bee5eb;
                "
                >User</span
              >
              <%} %>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <%- include('footer') %> <%- include('script') %>
  </body>
</html>
